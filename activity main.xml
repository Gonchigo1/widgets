<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Эхлэх
товчлуурыг дарна уу" android:textSize="30sp"/>
    <CheckBox
        android:id="@+id/chkAgree"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="40dp" android:text="Эхлэх" />
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" android:text="Хайртай амьтнаа сонгоно уу?" android:textSize="24sp"/>
    <RadioGroup
        android:id="@+id/rGroup" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="16dp">
        <RadioButton
            android:id="@+id/rBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нохой" />
        <RadioButton
            android:id="@+id/rBtn2" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Муур" />
        <RadioButton
            android:id="@+id/rBtn3" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Туулай" />
    </RadioGroup>
    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected"/>

    <ImageView
        android:id="@+id/imgPet"
        android:layout_width="417dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_launcher" />
</LinearLayout>
